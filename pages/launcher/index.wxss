/* pages/launcher/launcher.wxss */
Page {
  background: #0c97ee;
}

.launcher-container {
  height: calc(100vh);
  width: calc(100vw);
}

.logo {
  width: calc(14vw);
  height: calc(14vw);
}

.image-container {
  padding: 8px;
  border-radius: 50%;
  background-color: white;
}

.image-container1 {
  padding: calc(8vw);
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
}
.image-container2 {
  padding: calc(3vw);
  border-radius: 50%;
  border: solid 1.5px rgba(255, 255, 255, 0.3);
}

.image-container3 {
  padding: calc(4vw);
  border-radius: 50%;
  border: solid 1px rgba(255, 255, 255, 0.1);
}

.launcher-tip {
  color: white;
  align-self: center;
  font-size: 1.5rem;
  font-family: Arial, Helvetica, sans-serif;
}

.version-name {
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  color: white;
  align-self: center;
  font-size: 0.7rem;
  margin-bottom: 20px;
}