<navbar></navbar>
<toolbar>
  <text class="login-text">登录</text>
</toolbar>
<image class="logo-image" src="../../assets/logo-bg.png"></image>

<view class="flex-style-base input-layout" style="margin-top: 88rpx;">
  <image class="icon-img" src="../../assets/icon-account.png"></image>
  <input bindinput="handleUserName" class="input" placeholder="请输入手机号" placeholder-style="color:#999999;" />
</view>

<view class="flex-style-base input-layout">
  <image class="icon-img" src="../../assets/ic-pwd.png"></image>
  <input bindinput="handleUserPwd" password="{{true}}" class="input" placeholder="请输入密码" placeholder-style="color:#999999;" />
</view>

<text class="login-btn" bindtap="handleLogin">登录</text>

<view class="flex-style-base info-text">
  <text class="noaccount-text">还没有账号？</text>
  <text class="click-register" bindtap="handleRegister">点击注册</text>
</view>